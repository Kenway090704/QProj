<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView

        android:id="@+id/custom_tablayout_tab1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/bank_product"
        android:clickable="true"
        android:textColor="@color/com_tv_white_ffffff"

        android:textSize="@dimen/comm_tv_13"
        android:background="@drawable/shape_tab_bg_s"
        android:layout_height="@dimen/y80" />
    <TextView

        android:id="@+id/custom_tablayout_tab2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="@string/reedom_product"
        android:clickable="true"
        android:textSize="@dimen/comm_tv_13"
        android:background="@drawable/shape_tab_bg_n"
        android:textColor="@color/com_tv_orige_ff9600"
        android:gravity="center"
        android:layout_height="@dimen/y80" />
</LinearLayout>