<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--顶部-->
    <LinearLayout
        android:id="@+id/item_layout_tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:visibility="gone"
        android:orientation="vertical"
      >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/com_bg_white_ffffff">

            <TextView
                android:id="@+id/item_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/comm_dim_10"
                android:layout_marginLeft="@dimen/comm_dim_13"
                android:layout_marginTop="@dimen/comm_dim_10"
                android:text="@string/all_product"
                android:textColor="@color/com_tv_black_333333"
                android:textSize="@dimen/comm_tv_11" />

            <ImageView
                android:id="@+id/item_iv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:paddingLeft="@dimen/comm_dim_13"
                android:paddingRight="@dimen/comm_dim_13"
                app:srcCompat="@drawable/ic_list_icon_more" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/comm_dim_1"
            android:background="@color/com_bg_gray_eeeeee" />
    </LinearLayout>

</LinearLayout>