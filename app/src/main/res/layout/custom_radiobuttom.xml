<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/custom_radiobutton_1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/y26"
        android:paddingRight="@dimen/x53"
        android:paddingTop="@dimen/y26">

        <ImageView

            android:id="@+id/custom_radiobuttom_iv_1"
            android:layout_width="@dimen/y28"
            android:layout_height="@dimen/y28"
            app:srcCompat="@drawable/ic_pop_checkbox_s" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:text="@string/man"
            android:textColor="@color/com_tv_gray_666666"
            android:textSize="@dimen/comm_tv_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/custom_radiobutton_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/y26"
        android:paddingLeft="@dimen/x53"
        android:paddingTop="@dimen/y26">

        <ImageView
            android:id="@+id/custom_radiobuttom_iv_2"
            android:layout_width="@dimen/y28"
            android:layout_height="@dimen/y28"

            app:srcCompat="@drawable/ic_pop_checkbox_n" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"

            android:text="@string/woman"
            android:textColor="@color/com_tv_gray_666666"
            android:textSize="@dimen/comm_tv_14" />
    </LinearLayout>
</LinearLayout>