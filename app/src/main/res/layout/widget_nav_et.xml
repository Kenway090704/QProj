<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginRight="@dimen/comm_dim_13"
    android:gravity="center_vertical"
    android:layout_marginLeft="@dimen/comm_dim_13"
    android:background="@drawable/shape_bg_round_15"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="@dimen/comm_dim_13"
        android:layout_marginLeft="@dimen/comm_dim_10"
        app:srcCompat="@drawable/ic_menu_icon_search"
        android:layout_height="@dimen/comm_dim_13" />
    <EditText
        android:id="@+id/widget_nav_et_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/comm_dim_7"
        android:hint="@string/input_keyword"
        android:background="@null"
        android:paddingBottom="@dimen/comm_dim_9"
        android:paddingTop="@dimen/comm_dim_9"
        android:textColorHint="@color/com_tv_gray_999999"
        android:textSize="@dimen/comm_tv_14" />
</LinearLayout>