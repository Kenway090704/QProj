<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_bg_orige_ff9600"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="@dimen/comm_dim_44"
        android:layout_height="@dimen/comm_dim_44"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/comm_dim_12"
        android:layout_marginTop="@dimen/comm_dim_28"
        android:background="@drawable/shape_splash_circle">

        <TextView
            android:id="@+id/acty_splash_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/comm_dim_10"
            android:layout_marginRight="@dimen/comm_dim_10"
            android:gravity="center_horizontal"
            android:textColor="@color/com_tv_white_ffffff"

            android:textSize="@dimen/comm_tv_10" />


    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/comm_dim_125"
        android:layout_height="@dimen/comm_dim_157"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_default_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/comm_dim_17"
        android:text="@string/copyright"
        android:textColor="@color/com_tv_white_ffffff"
        android:textSize="@dimen/comm_tv_14" />
</RelativeLayout>